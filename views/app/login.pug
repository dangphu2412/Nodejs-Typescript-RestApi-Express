extends ../layout/SignLayout

block content
  form.user#login
    .form-group
      input#emailLogin.form-control.form-control-user(type='email' aria-describedby='emailHelp' placeholder='Enter Email Address...')
    .form-group
      input#passwordLogin.form-control.form-control-user(type='password' placeholder='Password')
    .form-group
      .custom-control.custom-checkbox.small
        input#customCheck.custom-control-input(type='checkbox')
        label.custom-control-label(for='customCheck') Remember Me
    a.btn.btn-primary.btn-user.btn-block(href='index.html')
      | Login
    hr
    a.btn.btn-google.btn-user.btn-block(href='index.html')
      i.fab.fa-google.fa-fw
      |  Login with Google
    a.btn.btn-facebook.btn-user.btn-block(href='index.html')
      i.fab.fa-facebook-f.fa-fw
      |  Login with Facebook
block scripts
    script(src="/js/auth/login.js")